<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:padding="15dp"
>
    <TextView
        android:id="@+id/company_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/company_logo_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:src="@drawable/shunfeng" />

    <TextView
        android:id="@+id/company_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/company_logo_iv"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/company_logo_iv"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="#4b4d51"
        android:textSize="20sp" />

</RelativeLayout>
