<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/menu_history_btn"
            style="@style/main_menu"
            android:textColor="@color/white"
            android:text="@string/menu_historical"
            android:drawableTop="@drawable/menu_history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/menu_more_btn"
            style="@style/main_menu"
            android:textColor="@color/white"
            android:text="@string/menu_about_tips"
            android:drawableTop="@drawable/menu_hi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/menu_back_btn"
            style="@style/main_menu"
            android:textColor="@color/white"
            android:text="@string/menu_exit"
            android:drawableTop="@drawable/menu_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
